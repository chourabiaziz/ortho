{% extends 'xbase/base.html.twig' %}

{% block title %}FichePatient
{% endblock %}

{% block body %}
 

<style>

p{
	color: black;
 }

</style>



<div class="container-xxl py-5">
		<div class="container">
			<div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
				 
			</div>
	<div class="card bg-light ">
		<div
			class="card-body pt-3">
			<!-- Bordered Tabs -->
			<ul class="nav nav-tabs nav-tabs-bordered">

				<li class="nav-item">
					<button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Fiche Patient</button>
				</li>


			</ul>
			<div class="tab-content pt-2">

				<div class="tab-pane fade show active profile-overview" id="profile-overview">
					<h5 class="card-title"><p>Description</p></h5>
					<p class="small fst-italic"><p>{{ fiche_patient.description }}</p></p>

					<h5 class="card-title">Profile Details</h5>

				 
					<div class="row">
						<div class="col-lg-3 col-md-4 label">Nom</div>
						<div class="col-lg-9 col-md-8"><p>{{ fiche_patient.nom }}</p></div>
					</div>

					<div class="row">
						<div class="col-lg-3 col-md-4 label">Prenom</div>
						<div class="col-lg-9 col-md-8"><p>{{ fiche_patient.prenom }}</p></div>
					</div>
					<div class="row">
						<div class="col-lg-3 col-md-4 label">cin</div>
						<div class="col-lg-9 col-md-8"><p>{{ fiche_patient.cin }}</p></div>
					</div><div class="row">
						<div class="col-lg-3 col-md-4 label">telephone</div>
						<div class="col-lg-9 col-md-8"><p>{{ fiche_patient.telephone }}</p></div>
					</div>
					<div class="row">
						<div class="col-lg-3 col-md-4 label">Ville</div>
						<div class="col-lg-9 col-md-8"><p>{{ fiche_patient.ville }}</p></div>
					</div>
					<div class="row">
						<div class="col-lg-3 col-md-4 label">Sexe</div>
						<div class="col-lg-9 col-md-8"><p>{{ fiche_patient.sexe }}</p></div>
					</div>

					<div class="row">
						<div class="col-lg-3 col-md-4 label">Date De Naissance</div>
						<div class="col-lg-9 col-md-8"><p>{{ fiche_patient.dateDeNaissance ? fiche_patient.dateDeNaissance|date('Y-m-d') : '' }}</p></div>
					</div>

					<div class="row">
						<div class="col-lg-3 col-md-4 label">Inserted in
						</div>
						<div class="col-lg-9 col-md-8"><p>{{ fiche_patient.dateAjout ? fiche_patient.dateAjout|date('Y-m-d') : '' }}</p></div>
					</div>


				</div>


			</div>
			<!-- End Bordered Tabs -->

		</div>
	</div>


 
 
  <br>
	{{ include('fiche_patient/_delete_form.html.twig') }}
{% endblock %}
