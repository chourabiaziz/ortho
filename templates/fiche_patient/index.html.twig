{% extends 'xbase/base.html.twig' %}

{% block title %}Fiche Patient
{% endblock %}

{% block body %}
<style>
	th{color: black;}
	td{color: black;}
</style>

<div class="container-xxl py-5">
		<div class="container">
			<div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
 				<h1>Liste des fiches patients
				</h1>
				<form class="form-inline my-2 my-lg-0" method="get">
					<div class="row">
						<div class="col-10"><input class="form-control mr-sm-2" name="search" type="search" placeholder="Recherche par CIN , Nom et prenom , Ville"
								aria-label="Search"></div>
						<div class="col-2"><button class="btn btn-outline-success my-2 my-sm-0" type="submit">Recherche</button></div>
						<div class="col-2"></div>
					</div>
				</form>
			</div>
 


 	<table style="width: 800px;margin-left: 20%;" class="table">
		<thead>
			<tr>
 				<th>CIN</th>
				<th>Nom et Pr√©nom</th>
				<th>Ville</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for fiche_patient in fiches %}
				<tr>
 					<td>{{ fiche_patient.cin }}</td>
					<td>
						{{ fiche_patient.nom }}
						-
						{{ fiche_patient.prenom }}
					</td>
					<td>{{ fiche_patient.ville }}</td>
					<td>
						<a class="btn btn-secondary" href="{{ path('app_fiche_patient_show', {'id': fiche_patient.id}) }}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
							<path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"/>
							<path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"/>
						  </svg></a>
						<a class="btn btn-warning" href="{{ path('app_fiche_patient_edit', {'id': fiche_patient.id}) }}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
							<path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325"/>
						  </svg></a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
		
	</table>
	
<nav class="app-pagination mt-5">
  <ul class="pagination justify-content-center">
    {{ knp_pagination_render(fiches) }}
  </ul></nav>
  <a class="btn btn-primary" href="{{ path('app_fiche_patient_new') }}">Ajouter</a>

</div>

{% endblock %}
