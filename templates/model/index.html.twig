{% extends 'base.html.twig' %}

{% block title %}Model index{% endblock %}

{% block body %}
    <h1>Model </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Path</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for model in models %}
            <tr>
                <td>{{ model.id }}</td>
                <td>{{ model.path }}</td>
                <td>{{ model.nom }}</td>
                <td>
                    <a class="btn btn-secondary" href="{{ path('app_model_show', {'id': model.id}) }}">Consulter</a>
                    <a class="btn btn-warning" href="{{ path('app_model_edit', {'id': model.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<a class="btn btn-primary" href="{{ path('app_model_new', {'id': model.id}) }}">Ajouter</a>

{% endblock %}
