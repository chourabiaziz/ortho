{% extends 'xbase/base.html.twig' %}

{% block title %}LettreSuivies index
{% endblock %}

{% block body %}
 
<style>

.cadre-photo {
    width: 460px;
    height: 600px;
    overflow: hidden;  
	margin-left: 100px;
	margin-bottom: 100px;
}

.cadre-photo img {
    width: 100%; 
    height: 100%; 
    display: cover;  
	border: 1px solid black; 
    box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.5); /* Ombre avec décalage de 5px en horizontal et vertical, flou de 10px, couleur noire avec une opacité de 0.5 */


}

</style>
	<div class="container-xxl py-5">
		<div class="container">
			<div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
				<p class="d-inline-block border rounded-pill py-1 px-4">Lettres</p>
				<h1>Historique des lettres
				</h1>
			</div>

			<div class="row g-4">
			 
				{% for x in lettre_suivies %}


					<div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
						<div class="service-item bg-light rounded h-100 p-5">
							<div class="d-inline-flex align-items-center justify-content-center bg-white rounded-circle mb-4" style="width: 65px; height: 65px;">
								<span class="fa fa-coin  text-primary fs-4"><svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-envelope-paper" viewBox="0 0 16 16">
  <path d="M4 0a2 2 0 0 0-2 2v1.133l-.941.502A2 2 0 0 0 0 5.4V14a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V5.4a2 2 0 0 0-1.059-1.765L14 3.133V2a2 2 0 0 0-2-2zm10 4.267.47.25A1 1 0 0 1 15 5.4v.817l-1 .6zm-1 3.15-3.75 2.25L8 8.917l-1.25.75L3 7.417V2a1 1 0 0 1 1-1h8a1 1 0 0 1 1 1zm-11-.6-1-.6V5.4a1 1 0 0 1 .53-.882L2 4.267zm13 .566v5.734l-4.778-2.867zm-.035 6.88A1 1 0 0 1 14 15H2a1 1 0 0 1-.965-.738L8 10.083zM1 13.116V7.383l4.778 2.867L1 13.117Z"/>
</svg></span>
													

							</div>
							
							<h4 class="mb-3">Lettre de {{x.type}}</h4>
							<p class="mb-4"> Concernant <b><i>Mr/MMe {{x.nomP}}</i></b></p>
							<h4 class="text-end"> {{x.date| date('d-M-Y')}}</h4>
							<a class="btn" href="{{x.id}}">
								<i class="fa fa-eye text-primary me-3"></i>Consulter
							</a>
						</div>
					</div>

				{% endfor %}
			</div>
		</div> <br><br><br>	<a class="btn btn-primary" href="{{ path('app_lettre_suivies_new') }}">Ajouter</a>

	</div>

 {% endblock %}
