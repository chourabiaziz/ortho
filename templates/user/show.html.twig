{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
<h1>Profile</h1>
 
	<div class="text-center" colspan="2"><img  style="border-radius: 100px;"  height="190px" width="190px" src="{{ asset('images/user/' ~ user.image) }}" alt=""></div>
  <br><br>
<table class="table">
	<tbody>
		
		<tr>
			<th>Nom</th>
			<td>{{ user.nom }}</td>
		</tr>
		<tr>
			<th>Email</th>
			<td>{{ user.email }}</td>
		</tr>
		 
		<tr>
			<th>Roles</th>
			{% if user.roles == ["ROLE_USER"]  %}
			<td>Ortho</td>

		</tr>

		<tr>
			<th>Statut de compte</th>
			
	{% if user.accepted == 1 %}
<td   class="bg-success" >Accepté</td>
{% elseif user.accepted is null %}
<td class=" bg-warning"  >En attente</td>
{% else %}
<td class="bg-danger" >Refusé</td>
{% endif %}
		 
		</tr>
		{% if user.profil %}
			
		<tr>
			<th>Emplacement</th>
			<td>{{ user.profil.emplacement }}</td>
		</tr>
		<tr>
			<th>Diplome</th>
			<td>{{ user.profil.diplome }}</td>
		</tr>
		<tr>
			<th>Faculte</th>
			<td>{{ user.profil.faculte }}</td>
		</tr>
		<tr>
			<th>Specialité</th>
			<td>{{ user.profil.specialite }}</td>
		</tr>
		{% endif %}

	</tbody>
</table>	
  
{% if user.accepted is null %}
<a href="/user/{{user.id}}/accepte" class=" btn white"  ><svg style="color: green;" xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-check2" viewBox="0 0 16 16">
  <path d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0"/>
</svg></a>
 <a href="/user/{{user.id}}/refus" class="btn white" ><svg style="color: red;" xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-dash-circle" viewBox="0 0 16 16">
	<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
	<path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8"/>
  </svg></a>
{% endif %}
 
		{% else %}
		<td>Administrateur</td>
		</tr>
	</tbody>
</table>
		{% endif %}



	


 


 

{% endblock %}