{% block title %}Abonnement
{% endblock %}

{% block body %}


<div class="container-xxl py-5">
	<div class="container">
		<div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
 			<h1>{{abonnement.nom}}
			</h1>
		</div>

		<div class="row g-4">
			 


			<div class="col-lg-12 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
				<div class="service-item bg-light rounded h-100 p-5">
					 
					<h4 class="mb-3">description</h4>
					<p class="mb-4">{{abonnement.description|nl2br|raw }}


						<h4 class="text-end"><b>{{abonnement.prix}} TND</b></h4>
					</p>
					
					 

				</div>
			</div>
			
			 
			<div class="">
			{% if app.user %}
			 {% if app.user.accepted %}
				<a class="btn btn-success" href="/abonnement/acheter/{{ abonnement.id }}">
        Acheter
    </a>
			 {% else %}
<a class="btn btn-success" href="/register">
        Acheter
    </a>
			 {% endif %}

{% else %}
<a class="btn btn-success" href="/register">
        Acheter
    </a>

			 {% endif %}
 

 
 
			</div>
			
		</div>
	</div>
</div>
{% endblock %}